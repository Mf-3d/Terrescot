{
  "name": "terrescot",
  "version": "0.5.0",
  "description": "Terre.",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npx electron .",
    "preinstall": "npx npm-force-resolutions",
    "build:win": "npx electron-builder --win --x64 --dir",
    "build:win-installer": "npx electron-builder --win --x64",
    "build:mac": "npx electron-builder --mac --x64",
    "setup": "npm install"
  },
  "author": "mf7cli",
  "build": {
    "publish": {
      "provider": "github",
      "owner": "mf-3d",
      "repo": "terrescot",
      "releaseType": "release"
    },
    "asar": false,
    "appId": "tk.mf7cli.terrescot",
    "productName": "Terrescot",
    "files": [
      "main.js",
      "src/",
      "package.json",
      "package-lock.json",
      "node_modules/"
    ],
    "win": {
      "icon": "src/image/logo.ico",
      "target": "nsis",
      "legalTrademarks": "Copyright 2022 mf7cli."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "electron-store": "^8.0.1",
    "express": "^4.17.3",
    "node-schedule": "^2.1.0",
    "request": "^2.88.2",
    "rss-parser": "^3.12.0"
  },
  "devDependencies": {
    "electron": "^19.0.6",
    "electron-builder": "^23.0.3"
  }
}
